{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "description": "Notes about all kind of objects",
  "additionalProperties": false,
  "properties": {
    "noteId": {
      "type": "string",
      "description": "Unique generated identified for the note",
      "example": "62d00c36-a94f-434d-9cd2-c7ea159303da"
    },
    "noteType": {
      "type": "string",
      "description": "Type of note (configured in settings)",
      "example": "Access issues"
    },
    "noteTitle": {
      "type": "string",
      "description": "Note title",
      "example": "BU Campus only issues"
    },
    "content": {
      "type": "string",
      "description": "The content of the note",
      "example": "There are access issues at BU campus"
    },
    "creatorLastName": {
      "type": "string",
      "description": "Last name of the user who created the note",
      "example": "Doe",
      "readonly": true
    },
    "creatorFirstName": {
      "type": "string",
      "description": "First name of the user who created the note",
      "example": "John",
      "readonly": true
    },
    "creatorMiddleName": {
      "type": "string",
      "description": "Middle name or initial of the user who created the note",
      "example": "X.",
      "readonly": true
    },
    "metadata": {
      "type": "object",
      "$ref": "raml-util/schemas/metadata.schema",
      "readonly": true
    }
  },
  "required": [
    "noteType",
    "noteTitle",
    "content"
  ]
}
